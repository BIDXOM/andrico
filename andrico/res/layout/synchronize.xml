<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#30567D">
<LinearLayout android:id="@+id/MainLayout" 
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/LayoutForLogo" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_width="fill_parent" android:gravity="center">
			<ImageView android:id="@+id/Logo" 
				android:layout_height="wrap_content" 
				android:src="@drawable/logo"
				android:layout_gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_margin="5px"></ImageView>
		</LinearLayout>
			<LinearLayout android:orientation="vertical" android:id="@+id/LayoutForButtons" android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal" android:paddingLeft="12px" android:paddingRight="12px" android:paddingBottom="8px" android:background="@drawable/back" android:layout_marginLeft="10px" android:layout_marginRight="10px">
			<TextView android:id="@+id/TextProfile" 
				android:layout_height="wrap_content" 
				android:textColor="#FFFFFF" 
				android:text="@string/choose_profile" android:gravity="center_horizontal" android:textStyle="bold" android:layout_width="fill_parent" android:layout_marginTop="10px">
			</TextView>

			<Spinner android:id="@+id/ChooseProfile" 
				android:layout_height="wrap_content" 
				android:minWidth="300px" 
				android:layout_width="fill_parent" android:clickable="false" android:minHeight="45px">
			</Spinner>


			<Button android:id="@+id/CreateProfile" 
				android:layout_height="wrap_content" 
				android:text="@string/create_profile" 
				android:layout_width="fill_parent" android:textSize="20px" android:textStyle="bold" android:layout_marginTop="5px" android:height="55px" android:drawableLeft="@drawable/ic_add_profile">
			</Button>
			<Button android:id="@+id/LogIn" 
				android:layout_height="wrap_content" 
				android:text="@string/log_in" 
				android:layout_width="fill_parent" android:enabled="false" android:textStyle="bold" android:textSize="20px" android:height="55px" android:layout_marginTop="5px" android:drawableLeft="@android:drawable/ic_menu_myplaces">
			</Button>
			
			<Button android:id="@+id/BackToMenu" 
				android:layout_height="wrap_content" 
				android:text="@string/back" 
				android:layout_width="fill_parent" android:textSize="20px" android:textStyle="bold" android:height="55px" android:layout_marginTop="5px" android:drawableLeft="@android:drawable/ic_menu_revert">
			</Button>
		</LinearLayout>
</LinearLayout>

</ScrollView>

