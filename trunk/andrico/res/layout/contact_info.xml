<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#30567D">

		<LinearLayout  
			android:orientation="vertical"
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:background="#30567D">
		
				<TextView android:id="@+id/name"  
						android:layout_width="wrap_content" 
						android:text="Name" 
						android:textSize="24px" 
						android:textStyle="bold" 
						android:layout_gravity="center_horizontal" 
						android:layout_height="wrap_content" 
						android:textColor="#FFFFFF" 
						android:visibility="invisible" 
						android:layout_marginTop="10px"/>
				
				<TextView android:id="@+id/date"  
						  android:layout_width="wrap_content" 
						  android:text="date of birth" 
						  android:textSize="18px" 
						  android:textStyle="bold" 
						  android:layout_gravity="left" 
						  android:layout_height="wrap_content" 
						  android:textColor="#FFFFFF" 
						  android:layout_marginTop="15px" 
						  android:visibility="invisible"/>
				
				<TextView android:id="@+id/adress"  
						  android:layout_width="wrap_content" 
						  android:text="adress: " 
						  android:textSize="24px" 
						  android:textStyle="bold" 
						  android:layout_gravity="left" 
						  android:layout_height="wrap_content" 
						  android:textColor="#FFFFFF" 
						  android:visibility="invisible" 
						  android:layout_marginTop="10px"/>
				
				<Button android:id="@+id/goToAdress" 
						android:width="300px" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="SHOW ADRESS ON MAP" 
						android:textStyle="bold" 
						android:drawableLeft="@android:drawable/ic_menu_mapmode" 
						android:height="55px" 
						android:textSize="18px" 
						android:layout_marginTop="15px" 
						android:visibility="invisible"
						android:enabled="false"/>
				
				<Button android:id="@+id/page" 
						android:width="300px" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="no url" 
						android:textSize="18px" 
						android:textStyle="bold" 
						android:drawableLeft="@android:drawable/ic_menu_crop" 
						android:height="55px" 
						android:layout_marginTop="5px" 
						android:visibility="invisible"/>
						
				<TextView android:id="@+id/url" 
						android:layout_height="wrap_content" 
						android:textColor="#FFFFFF"
						android:text="12345678" 
						android:textStyle="bold" 
						android:layout_width="fill_parent" 
						android:gravity="center_vertical|center_horizontal" 
						android:minHeight="1px" android:textSize="1px" 
						android:visibility="invisible"
						style="android:attr/listItemSecondLineStyle"/>
		</LinearLayout>
</ScrollView>