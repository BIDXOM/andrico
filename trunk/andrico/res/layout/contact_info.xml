<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#30567D">

		<LinearLayout  
			android:orientation="vertical"
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:background="#30567D">
		
				<TextView android:id="@+id/name"  
						android:layout_width="wrap_content" 
						android:text="Name" 
						android:textSize="24px" 
						android:textStyle="bold" 
						android:layout_gravity="center_horizontal" 
						android:layout_height="wrap_content" 
						 android:textColor="#FFFFFF" android:visibility="invisible" android:layout_marginTop="10px">
				</TextView>
				<TextView android:id="@+id/secondName"  
						android:layout_width="wrap_content" 
						android:text="Second name" 
						android:textSize="24px" 
						android:textStyle="bold" 
						android:layout_gravity="center_horizontal" 
						android:layout_height="wrap_content" 
						android:textColor="#FFFFFF" android:visibility="invisible">
				</TextView>
				<TextView android:id="@+id/date"  
						android:layout_width="wrap_content" 
						android:text="date of birth" 
						android:textSize="18px" 
						android:textStyle="bold" 
						android:layout_gravity="center_horizontal" 
						android:layout_height="wrap_content" 
						 android:textColor="#FFFFFF" android:layout_marginTop="15px" android:visibility="invisible">
				</TextView>
				
				<Button android:id="@+id/adress" 
						android:width="300px" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="@string/no_adress" 
						android:textStyle="bold" 
						android:drawableLeft="@android:drawable/ic_menu_mapmode" 
						android:height="55px" 
						android:textSize="18px" android:layout_marginTop="10px" android:visibility="invisible">
				</Button>
				<Button android:id="@+id/page" 
						android:width="300px" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="no url" 
						android:textSize="18px" 
						android:textStyle="bold" 
						android:drawableLeft="@android:drawable/ic_menu_crop" 
						android:height="55px" android:layout_marginTop="5px" android:visibility="invisible">
				</Button>	
		</LinearLayout>
</ScrollView>