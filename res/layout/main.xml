<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#30567D">
<LinearLayout android:id="@+id/MainLayout" 
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">
	<LinearLayout android:id="@+id/LayoutForLogo" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_width="fill_parent" android:gravity="center">
			<ImageView android:id="@+id/Logo" 
				android:layout_height="wrap_content" 
				android:src="@drawable/logo" 
				android:layout_gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_margin="5px"></ImageView>
		</LinearLayout>
	<LinearLayout android:orientation="vertical" android:id="@+id/LayoutForButtons" android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal" android:paddingLeft="12px" android:paddingRight="12px" android:paddingBottom="8px" android:background="@drawable/back" android:layout_marginLeft="10px" android:layout_marginRight="10px">
		<Button android:id="@+id/ViewContacts" android:width="300px" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/view_contacts" android:textSize="20px" android:height="55px" android:layout_marginTop="20px" android:textStyle="bold" android:drawableLeft="@android:drawable/ic_menu_my_calendar"></Button>
		<Button android:id="@+id/Synchronize" android:layout_height="wrap_content" android:width="300px" android:layout_width="fill_parent" android:text="@string/synchronize" android:textSize="20px" android:layout_marginTop="5px" android:height="55px" android:textStyle="bold" android:drawableLeft="@drawable/ic_synch"></Button>
		<Button android:id="@+id/Settings" android:layout_height="wrap_content" android:layout_width="fill_parent" android:width="300px" android:text="@string/settings" android:enabled="false" android:textSize="20px" android:layout_marginTop="5px" android:height="55px" android:textStyle="bold" android:drawableLeft="@android:drawable/ic_menu_preferences"></Button><Button android:id="@+id/Exit" android:layout_height="wrap_content" android:width="300px" android:layout_width="fill_parent" android:text="@string/exit" android:textSize="20px" android:layout_marginTop="5px" android:height="55px" android:textStyle="bold" android:drawableLeft="@drawable/ic_exit"></Button></LinearLayout>
	</LinearLayout>

</ScrollView>
